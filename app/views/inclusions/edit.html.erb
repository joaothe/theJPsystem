<h1>Editing inclusion</h1>

<%= form_for :inclusion, url: inclusion_path(@inclusion), method: :patch do |f| %>

  <% if @inclusion.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@inclusion.errors.count, "error") %> prohibited
        this inclusion from being saved:
      </h2>
      <ul>
        <% @inclusion.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Back', inclusions_path %>
